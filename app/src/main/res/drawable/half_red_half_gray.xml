<!-- res/drawable/half_red_half_gray.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="#808080"/> <!-- Gray color for the background -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FF0000"/> <!-- Red color for the progress -->
            </shape>
        </clip>
    </item>
</layer-list>
